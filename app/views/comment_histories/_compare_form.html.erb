<div class="version-selection">
    <%= form_with url: compare_comment_histories_path(comment), method: :get, local: true do %>
    <div class="compare-controls">
        <p class="compare-hint">※比較するには2つのバージョンを選択してください</p>
        <div class="version-selects">
            <div class="select-group">
                <label for="from">From:</label>
                <%= select_tag :from, options_for_select(versions, from), class: "version-select" %>
            </div>
            <div class="select-group">
                <label for="to">To:</label>
                <%= select_tag :to, options_for_select(versions, to), class: "version-select" %>
            </div>
        </div>
        <button type="submit" class="compare-button">選択したバージョンを比較</button>
    </div>
    <% end %>
</div>
