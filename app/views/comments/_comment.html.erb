<div class="comment" id="comment-<%= comment.id %>">
  <p><strong><%= comment.author.nickname %></strong>: <%= comment.content %></p>
  <p class="comment-meta">
    作成日: <%= comment.created_at.strftime('%Y-%m-%d %H:%M') %>
    <% if comment.author == current_user %>
      <%= link_to t('views.shared.action.edit'), edit_topic_comment_path(comment.topic, comment), class: "edit-link" %>
    <% end %>
    <%# TODO 認可 and i18n %>
    <%= link_to '履歴を見る', comment_histories_path(comment), class: "history-link" %>
  </p>
</div>
