<div class="decisions-tabs">
  <ul class="tabs-list" data-controller="decisions">
    <li class="<%= current_tab == 'comment' ? 'active' : '' %>">
      <%= link_to t('.comment_decisions_title'),
                  decisions_path(reportable_type: 'comment') %>
    </li>
    <li class="<%= current_tab == 'user' ? 'active' : '' %>">
      <%= link_to t('.user_decisions_title'),
                  decisions_path(reportable_type: 'user') %>
    </li>
  </ul>
</div>
