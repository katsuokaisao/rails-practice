<table class="decisions-table">
  <thead>
    <tr>
      <th>通報者</th>
      <th>通報理由</th>
      <th>通報理由テキスト</th>
      <th>対象ユーザー</th>
      <th>審査タイプ</th>
      <th>審査メモ</th>
      <th>停止期間</th>
      <th>審査者</th>
      <th>審査日時</th>
    </tr>
  </thead>
  <tbody>
    <% pagination.records.each do |decision| %>
      <tr>
        <td><%= decision.report.reporter.nickname %></td>
        <td><%= decision.report.enum_i18n(:reason_type) %></td>
        <td><%= decision.report.reason_text %></td>
        <td><%= decision.report.target_user.nickname %></td>
        <td><%= decision.enum_i18n(:decision_type) %></td>
        <td><%= decision.note %></td>
        <td><%= decision.suspension_until&.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= decision.moderator.nickname %></td>
        <td><%= decision.created_at.strftime('%Y-%m-%d %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
