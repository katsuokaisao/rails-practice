<% if !user_signed_in? && !moderator_signed_in? %>
  <%= render 'shared/back_button', url: root_path %>
<% end %>
<h2><%= t('authentication.signup') %></h2>

<%= form_with(model: resource, as: resource_name, url: user_registration_path) do |f| %>
  <%= render partial: "shared/form_errors", locals: { model: resource } %>

  <div class="field">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= t('devise.minimum_password_length', count: @minimum_password_length) %>)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('authentication.signup') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
