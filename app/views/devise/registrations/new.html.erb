<h2><%= t('views.shared.authentication.signup') %></h2>

<%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
  <%= render partial: "shared/form_errors", locals: { model: resource } %>

  <div class="field">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('views.shared.authentication.signup') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
