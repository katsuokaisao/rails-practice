<div class="container">
  <div class="invitation-list-header">
    <h1 class="text-title"><%= t('.title') %></h1>
  </div>

  <% if @invitations.any? %>
    <div class="invitation-grid">
      <% @invitations.each do |invitation| %>
        <div class="invitation-card card">
          <div class="invitation-card-header">
            <h2 class="text-card-title"><%= invitation.tenant.name %></h2>
            <span class="text-caption">@<%= invitation.tenant.identifier %></span>
          </div>

          <div class="invitation-card-body">
            <p class="text-body">
              <%= t('.invited_by', inviter: invitation.inviter.display_name_for(invitation.tenant)) %>
            </p>
            <p class="text-caption">
              <%= t('.invited_at', date: l(invitation.created_at, format: :short)) %>
            </p>
          </div>

          <div class="invitation-card-actions">
            <%= link_to t('.accept'),
                        accept_my_invitation_path(invitation),
                        class: "btn btn-primary btn-sm" %>
            <%= button_to t('.reject'),
                          reject_my_invitation_path(invitation),
                          method: :post,
                          data: { turbo_confirm: t('.reject_confirm') },
                          class: "btn btn-secondary btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="invitation-list-empty">
      <p><%= t('.no_invitations') %></p>
    </div>
  <% end %>
</div>
