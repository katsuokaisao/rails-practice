<div id="modal" class="modal-overlay" data-controller="backdrop">
  <div class="modal-dialog" role="dialog" aria-modal="true" aria-labelledby="modal-title">
    <h2 id="modal-title">レポート作成</h2>

    <%= render "form", topic: topic, report: report %>

    <div class="modal-actions">
      <%= link_to "閉じる", close_modal_index_path(format: :turbo_stream), class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<style>
.modal-overlay { position: fixed; inset: 0; display: grid; place-items: center; background: rgba(0,0,0,.4); z-index: 50; }
.modal-dialog  { width: min(720px, 92vw); background: #fff; border-radius: 12px; padding: 20px; }
.errors { background: #fee; border: 1px solid #f99; padding: 8px; margin-bottom: 12px; }
</style>
