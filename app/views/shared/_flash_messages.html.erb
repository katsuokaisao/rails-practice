<div class="flash-messages" id="flash-messages">
  <% flash.each do |type, message| %>
    <div class="flash-message flash-<%= type %>" data-controller="flash">
      <span class="flash-icon material-icons">
        <% if type == "notice" %>
          check_circle
        <% elsif type == "alert" %>
          error
        <% elsif type == "warning" %>
          warning
        <% end %>
      </span>
      <span class="flash-content"><%= message %></span>
      <button class="flash-close" data-action="click->flash#close">
        <span class="material-icons">close</span>
      </button>
    </div>
  <% end %>
</div>
