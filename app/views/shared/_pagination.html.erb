<% unless @pagination.page == 1 and @pagination.ahead == 0 %>
  <nav class="pagination">
    <% @pagination.window_numbers.each do |num| %>
      <% if num == @pagination.page %>
        <span class="is-current"><%= num %></span>
      <% else %>
        <%= link_to num, @pagination.page_path(request.path, num) %>
      <% end %>
    <% end %>
  </nav>
<% end %>
