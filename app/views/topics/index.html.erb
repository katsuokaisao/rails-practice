<h2><%= t('views.shared.title.index', resource: Topic.model_name.human) %></h2>
<% @topics.each do |topic| %>
  <h3><%= topic.title %></h3>
  <p>作成者: <%= topic.author.nickname %></p>
  <p>作成日: <%= topic.created_at.strftime('%Y-%m-%d %H:%M') %></p>
  <%= link_to t('views.shared.action.show'), topic_path(topic) %>
  <%= link_to t('views.shared.action.edit'), edit_topic_path(topic) %>
<% end %>
<%= link_to t('views.shared.action.new'), new_topic_path %>
