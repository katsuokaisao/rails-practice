<section class="topic-show">
    <h3><%= @topic.title %></h3>
    <div class="topic-details">
        <p>作成者: <%= @topic.author.nickname %></p>
        <p>作成日: <%= @topic.created_at.strftime('%Y-%m-%d %H:%M') %></p>
    </div>
</section>
<section class="topic-comments">
  <h4>コメント</h4>
  <div class="comment-list">
      <% @pagination.records.each do |comment| %>
        <div class="comment">
          <p><strong><%= comment.author.nickname %></strong>: <%= comment.content %></p>
          <p class="comment-meta">作成日: <%= comment.created_at.strftime('%Y-%m-%d %H:%M') %></p>
        </div>
      <% end %>
  </div>
  <%= render partial: 'shared/pagination', locals: { pagination: @pagination } %>
</section>
